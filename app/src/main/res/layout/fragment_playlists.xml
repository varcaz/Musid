<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frag_playlist"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.playlistsFragment"
    android:background="@null">


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"

        android:paddingHorizontal="10dp"
        android:id="@+id/playlist_recycle_view">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageButton
        android:id="@+id/btn_add_playlist"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/transparent"

        android:layout_alignBottom="@+id/playlist_recycle_view"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/add_playlist_btn" />
</RelativeLayout>