<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:id="@+id/dialog_relative_layout"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playlist Name " />

            <EditText
                android:id="@+id/new_playlist_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColorHighlight="@color/transparent"
                android:textColorLink="@color/transparent"

                android:padding="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingTop="30dp"
                android:layout_height="55dp">

                <TextView
                    android:id="@+id/error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="#D35230"
                    android:text=" Playlist with same name already exists" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/new_playlist_ok_btn"
                    android:text="OK"
                    android:textColor="@color/subtextColor"
                    android:layout_width="45dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"

                    android:background="@color/transparent" />
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>