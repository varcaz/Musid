<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_playlist"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:padding="10dp"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="170dp"

        android:layout_height="210dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/transparentGrey"
        app:cardElevation="0dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@null">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_playlist_art"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                android:layout_height="150dp"
                app:riv_corner_radius="5dp"
                android:src="@drawable/default_music_art"
                app:riv_border_color="@color/subtextColor"
                app:riv_border_width="1dp" />

            <TextView
                android:id="@+id/tv_playlist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Favorite"
                android:background="@null"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/subtextColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@null"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/subtextColor"

                    android:textSize="8sp"
                    android:text="songs added  | " />

                <TextView
                    android:id="@+id/tv_playlist_song_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/subtextColor"

                    android:textSize="8sp" />
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>