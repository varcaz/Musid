<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_album"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:padding="10dp"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView

        android:layout_marginTop="70dp"
        android:layout_width="170dp"
        android:layout_height="100dp"

        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/transparentGrey"
        app:cardElevation="0dp"

        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@null"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="70dp">

            <TextView
                android:id="@+id/tv_album_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:singleLine="true"
                android:paddingHorizontal="20dp"
                android:gravity="center_horizontal"
                android:text="Favorite"
                android:textColor="@color/subtextColor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_album_artist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shawn Mendus"
                    android:textColor="@color/subtextColor"
                    android:textSize="8sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | Songs "

                    android:textColor="@color/subtextColor"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv__albums_song_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/subtextColor"
                    android:textSize="8sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_album_art"
        android:layout_width="130dp"
        android:layout_height="140dp"
        app:riv_border_color="@color/subtextColor"
        app:riv_border_width="1dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="50dp"
        android:foregroundGravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/default_music_art"
        app:riv_corner_radius="60dp" />
</RelativeLayout>